$(document).ready(function(){
//open popup
//alert(TAB_DEVICE);
if($("#newcandidate").length>0 /*&& TAB_DEVICE == 0*/) {
	$("#fancybox-overlay").show();
	$(".overlay_form").fadeIn(1000);
	positionPopup("instructions"); 
