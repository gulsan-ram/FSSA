$(".guidelink").click(function(){
	var page = $(this).attr('page');
	if($("."+page).length>0) {
		$("."+page).fadeIn(1000);
		$("#fancybox-overlay").show();
		positionPopup(page);
	}
});

//$(".docPopup").click(function(){
$(document).on("click",".docPopup",function(){
	var page = $(this).attr('page');
	var thisElement = $(this);
	if($("."+page).length>0) {
		$("#fancybox-overlay").show();
		var pageElement = $("."+page);
		pageElement.fadeIn(1000);
		var topPos = thisElement.offset().top - $(window).scrollTop();
		pageElement.css({
			left: ($(window).width() - pageElement.width()) / 2,
			top: ($(window).height() - pageElement.height()) / 2,
			position:'absolute'
		});
		$(window).scrollTop(pageElement.scrollTop());
	}
});
//$(".printDoc").click(function(){
$(document).on("click",".printDoc",function(){	
	var page = $(this).attr('page');
	//docFrame = window.frames[page+"_frame"];
	var docFrame = document.getElementById(page+"_frame");
	try{
		docFrame.focus();
		docFrame.contentWindow.print();
	} catch(e){
		console.log(e);
	}
	return false;
});

//close popup
	//$(".close").click(function(){
$(document).on("click",".close",function(){
		var page = $(this).attr('page');
		$("."+page).fadeOut(500);
		$("#fancybox-overlay").fadeOut(500);
	});
	
	//clear upload image
//$(".close").click(function(){
$(document).on("click",".clearUploadImg",function(){
		var page = $(this).attr('page');
		var pageq = $(this).attr('pageq');
		var paged = $(this).attr('paged');
		clearField(page,pageq,paged);
		$("."+page).fadeOut(500);
		$("#fancybox-overlay").fadeOut(500);
		$("#msg_"+paged).html("");
	});
});

function clearField(page, pageq, docname){
	var data = "q="+pageq+"&docname="+docname;
	$.ajax({
		type:"POST",
		dataType: "json",
		url: "upload_clear_doc.php",
		data: data,
		success: function(response){
		}
	});	
}
 
//position the popup at the center of the page
function positionPopup(page){
	if(!$("."+page).is(':visible')){
		return;
	}
	$("."+page).css({
		left: ($(window).width() - $("."+page).width()) / 2,
		top: ($(window).width() - $("."+page).width()) / 3,
		position:'absolute'
	});
}
